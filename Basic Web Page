<script type="text/javascript">
    function hotel() {
      var uid = document.getElementById("uid").value;
      var name = document.getElementById("name").value;
      var pn = document.getElementById("pn").value;
      var pp = document.getElementsByName("pp");
      var dp = document.getElementById("dp").value;
      var e = document.getElementById("branch");
      var strUser = e.options[e.selectedIndex].value;
      var jl = document.getElementById("jl").value;
      var last = /(578[0-9]{3})/;
      
      

      if (uid == "") {
        alert("uid field empty");
        return false;
      }

      if (uid.length < 12) {
        alert("UID should be of more than 12 characters length");
        return false;
      } else {
      for (var i = 0; i < uid.length; i++) {
        if (!((uid.charAt(i) >= "a" && uid.charAt(i) <= "z") || (uid.charAt(i) >= "A" && uid.charAt(i) <= "Z") || (uid.charAt(i) >= "0" && uid.charAt(i) <= "9"))) {
          alert("Enter only Number and Aplhabet in UID");
          return false;
        }
      }
    }
      
      if (name == "") {
        alert(" Name field empty");
        return false;
      } 
      if (pn == "") {
        alert("mobile field empty");
        return false;
      }
      if (pn.length> 10 || pn.length < 10) {
        alert("phone number should be of 10 numbers");
        return false;
      } else {
        for (i = 0; i < pn.length; i++) {
          if (!(pn.charAt(i) >= "0" && pn.charAt(i) <= "9")) {
            alert("enter  number only in phone field");
            return false;
          }
        }
      }
      if (
        pp[0].checked == false &&
        pp[1].checked == false &&
        pp[2].checked == false &&
        pp[3].checked == false &&
        pp[4].checked == false
      ) {
        alert("Please choose your skills");
        return false;
      }
      if (dp == "") {
        alert("degree percentage field empty");
        return false;
      }
      if (dp < 75) {
        alert("NOT ELIGIBLE,degree percentage should be greater than 75");
        return false;
      }
      if(strUser==0) 
    {
       alert("select your year of passout");
     return false;
	}
      if(jl=="")
    {
        alert("job location field is empty");
       return false;
	}
   if (jl.length!=6)
   {
       alert("enter 6 digits pincode");
   return false;
   }
    if (!last.test(jl))
   {
       alert("enter pincode starting with 578 followed by any 3 digits of your choice from 0 to 9 ");
     return false;
	}

      alert("validation success");
      return true;
    }
  </script>
